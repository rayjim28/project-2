<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Edit Budget</h2>

  <form action="/budgets/<%= budget.id %>?_method=PUT" method="POST" autocomplete="off" class="mt-3">
    <div class="mb-3">
      <label for="budgetName" class="form-label">Expense Name</label>
      <input type="text" name="name" class="form-control" id="budgetName" value="<%= budget.name %>" required>
    </div>
    <div class="mb-3">
      <label for="budgetAmount" class="form-label">Amount</label>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <input type="number" name="amount" class="form-control" id="budgetAmount" value="<%= budget.amount %>" required>
      </div>
    </div>
    <div class="mb-3">
      <label for="budgetCategory" class="form-label">Category</label>
      <select name="category" class="form-control" id="budgetCategory" required>
        <option value="housing" <%= budget.category === 'housing' ? 'selected' : '' %>>Housing</option>
        <option value="groceries" <%= budget.category === 'groceries' ? 'selected' : '' %>>Groceries</option>
        <!-- This is where I can add more options -->
      </select>
    </div>
    <div class="mb-3">
      <label for="budgetDate" class="form-label">Date</label>
      <input type="date" name="date" class="form-control" id="budgetDate" value="<%= budget.date.toISOString().split('T')[0] %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Budget</button>
  </form>

  <form action="/budgets/<%= budget.id %>?_method=DELETE" method="POST" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete Budget</button>
  </form>
</div>

<%- include('../partials/footer') %>