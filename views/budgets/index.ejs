<%- include('../partials/header') %>

<h2>Budgets</h2>

<a href="/budgets/new">Add a Budget</a>

<ul>
    <% budgets.forEach(function(budget) { %>
        <li>
            <form action="/budgets/<%= budget.id %>?_method=DELETE" method="POST">
                <button type="submit">delete</button>
            </form>
            <a href="/budgets/<%= budget.id %>">
                <%= budget.name %>
            </a>
        </li>
    <% }); %>
</ul>

